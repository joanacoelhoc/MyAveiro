<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MyAveiro - @ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="@Url.Content("/Content/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("/Content/modern-business.css")" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")

    
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("MyAveiro", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li id="other" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Quick Links <b class="caret"></b></a>
                        <ul class="dropdown-menu">

                            <li id="sidebarpage">
                                @Html.ActionLink("Transports", "Transports", "Utilities")
                                @Html.ActionLink("Emergency", "Emergency", "Utilities")
                                @Html.ActionLink("Police", "Police", "Utilities")
                            </li>

                        </ul>
                    </li>

                </ul>
            </div>
            
        </div>

    </nav>

    @RenderBody()

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; MyAveiro</p>
                </div>
            </div>
        </footer>

    </div>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
  