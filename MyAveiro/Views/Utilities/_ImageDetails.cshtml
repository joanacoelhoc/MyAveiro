@model System.Collections.Generic.IEnumerable<string>

<!-- Icones used in the carousel -->
<div id="myCarousel" class="carousel" data-ride="carousel" style="margin-left:20px;">
    <!-- Icones used in the carousel -->
    <ol class="carousel-indicators">
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
        @for (int i = 0; i < 1; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
        }
        @for (int i = 1; i < Model.Count(); i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i"></li>
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @foreach (var item in Model)
        {
            <div class="item active">
                <img src="@Url.Content(@item)" >
            </div>
            break;
        }
        @for (int i = 1; i < Model.Count(); i++)
        {
            <div class="item ">
                <img src="@Url.Content(Model.ElementAt(i))" >
            </div>
        }
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


